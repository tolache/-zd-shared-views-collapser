{
  "manifest_version": 3,
  "name": "Zendesk Tweaker",
  "description": "Keep shared views collapsed in Zendesk",
  "version": "2.1.1",
  "action": {
    "default_popup": "index.html",
    "default_title": "Zendesk Tweaker"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zendesk.com/agent/*"
      ],
      "js": [
        "./static/js/views.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.zendesk.com/agent/*"
      ],
      "js": [
        "./static/js/ticket.js"
      ],
      "run_at": "document_idle"
    }
  ]
}